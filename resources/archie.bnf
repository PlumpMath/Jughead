<ArchieLine> = Normal | Special
Special      = KeyValuePair | Skip | EndSkip | Ignore

(* Key Value Pair *)
KeyValuePair = <WhiteSpace>* Key <WhiteSpace>* <':'> <WhiteSpace>* Value <WhiteSpace>*
Value        = (ValueWord (WhiteSpace+ ValueWord)*) WhiteSpace*
<ValueWord>  = #'[^\r\n\s\t]+'
Key          = KeyPart (<'.'> KeyPart)*
<KeyPart>    = #'[\w\-]+'

(* Skip / Endskip *)
Skip    = WhiteSpace* <#'(?i):skip'> WhiteSpace* <AnyValue>
EndSkip = WhiteSpace* <#'(?i):endskip'> WhiteSpace* <AnyValue>

(* Ignore *)
Ignore = WhiteSpace* <#'(?i):ignore'> WhiteSpace* <AnyValue>

(* Normal *)
Normal = AnyValue

(* Utility *)
AnyValue     = #".*"
<WhiteSpace> = #"[\t\s]"
